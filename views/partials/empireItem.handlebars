    <td>
		<a href="/empires/view/{{empireID}}"><button type="button" id="empire-view-button">View</button></a>
        <a href="/empires/edit/{{empireID}}"><button type="button" id="empire-edit-button">Edit</button></a>
        <button type="button" id="empire-delete-button" onclick="createDeleteModal('/empires/delete/', {{empireID}})">Delete</button>
    </td>

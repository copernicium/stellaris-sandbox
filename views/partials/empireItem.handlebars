<tr>
    <td>{{name}}</td>
    <td>{{aggressiveness}}</td>
    <td>
        <div class="flex-row">
            <div class="color-swab" style="background-color: {{primaryColor}};"></div>
            <div>{{primaryColor}}</div>
        </div>
    </td>
    <td>
        <div class="flex-row">
            <div class="color-swab" style="background-color: {{secondaryColor}};"></div>
            <div>{{secondaryColor}}</div>
        </div>
    </td>
